#!/bin/sh
#
# Pre-commit hook для проверки форматирования Go кода
#

# Цвета для вывода
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Проверка форматирования Go кода...${NC}"

# Получаем список измененных Go файлов
GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$GO_FILES" ]; then
    echo -e "${GREEN}Нет измененных Go файлов для проверки${NC}"
    exit 0
fi

# Проверяем форматирование
UNFORMATTED=$(gofmt -l $GO_FILES)

if [ -n "$UNFORMATTED" ]; then
    echo -e "${RED}Ошибка: следующие файлы не отформатированы:${NC}"
    echo "$UNFORMATTED"
    echo ""
    echo -e "${YELLOW}Запустите 'gofmt -w .' или 'go fmt ./...' для автоматического форматирования${NC}"
    exit 1
fi

# Проверяем через gofmt -d (более строгая проверка)
DIFF_OUTPUT=$(gofmt -d $GO_FILES)
if [ -n "$DIFF_OUTPUT" ]; then
    echo -e "${RED}Ошибка: найдены различия в форматировании:${NC}"
    echo "$DIFF_OUTPUT"
    echo ""
    echo -e "${YELLOW}Запустите 'gofmt -w .' или 'go fmt ./...' для автоматического форматирования${NC}"
    exit 1
fi

echo -e "${GREEN}Форматирование проверено успешно!${NC}"
exit 0

